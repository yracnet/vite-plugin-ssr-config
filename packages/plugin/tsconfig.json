{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*",
    "src/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "example",
    "dist",
    ".ssr"
  ]
}